<%- include('partials/header.ejs', { pageTitle: 'Daftar Buku' }) %>

<div class="container">
    <h1 class="my-4">Daftar Buku</h1>
    <a href="/add" class="btn btn-primary mb-3">Tambah Buku Baru</a>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Judul</th>
                <th>Penulis</th>
                <th>Tahun</th>
                <th>Kategori</th>
                <th>Status</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% books.forEach(book => { %>
                <tr>
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.year %></td>
                    <td><%= book.category %></td>
                    <td><%= book.status %></td>
                    <td>
                        <a href="/edit/<%= book.id %>" class="btn btn-warning btn-sm">Edit</a>
                        <form action="/books/<%= book.id %>" method="POST" class="d-inline" onsubmit="return confirm('Apakah Anda yakin ingin menghapus buku ini?');">
                            <input type="hidden" name="_method" value="DELETE">
                            <button type="submit" class="btn btn-danger btn-sm">Hapus</button>
                        </form>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<%- include('partials/footer.ejs') %>